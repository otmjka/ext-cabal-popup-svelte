{
  "manifest_version": 3,
  "name": "Cabal bot",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets2/*", "assets-content/*", "*.html", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
